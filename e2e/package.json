{
  "name": "@cloudflare-image-mcp/e2e-tests",
  "version": "0.1.0",
  "description": "End-to-end tests for Cloudflare Image MCP",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test tests/api",
    "test:openai": "playwright test tests/api/openai",
    "test:mcp": "playwright test tests/api/mcp",
    "test:ui": "playwright test tests/ui",
    "test:workers": "TEST_TARGET=workers playwright test",
    "test:staging": "TEST_TARGET=staging playwright test",
    "test:local": "TEST_TARGET=local playwright test",
    "test:ui:interactive": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "install:browsers": "playwright install --with-deps"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "openai": "^4.82.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
