{
  "name": "cloudflare-image-mcp",
  "version": "0.1.0",
  "description": "Cloudflare Image MCP - OpenAI-compatible image generation with MCP support",
  "author": "tan-yong-sheng",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build:workers",
    "build:workers": "cd workers && npm ci && npm run check",
    "test": "npm run test:e2e",
    "test:e2e": "cd e2e && npm test",
    "test:e2e:staging": "cd e2e && TEST_TARGET=staging npm test",
    "test:e2e:production": "cd e2e && TEST_TARGET=production npm test",
    "clean": "rm -rf e2e/test-results e2e/playwright-report"
  },
  "workspaces": [],
  "engines": {
    "node": ">=20.0.0"
  }
}
