# Cloudflare Image MCP - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Cloudflare Configuration
# =============================================================================

# Cloudflare API Token (needs AI and Workers AI permissions)
# Get from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=

# Cloudflare Account ID
# Get from: Cloudflare Dashboard → Workers & Pages (right sidebar)
CLOUDFLARE_ACCOUNT_ID=

# =============================================================================
# R2/S3 Storage Configuration
# =============================================================================

# R2 bucket name (create in Cloudflare Dashboard → R2)
S3_BUCKET=cloudflare-image-mcp-images

# Region (use "auto" for R2)
S3_REGION=auto

# R2 endpoint URL (from R2 dashboard → your bucket → Settings)
# Format: https://<account-id>.r2.cloudflarestorage.com
S3_ENDPOINT=

# R2 credentials (create in R2 dashboard → Manage R2 API tokens)
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Public CDN URL for images (configure in R2 dashboard → Settings → Public access)
# Format: https://pub-<id>.r2.dev or custom domain
S3_CDN_URL=

# =============================================================================
# Server Configuration
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Image expiry time in hours (default: 24)
IMAGE_EXPIRY_HOURS=24

# Default model to use
DEFAULT_MODEL=@cf/black-forest-labs/flux-1-schnell

# =============================================================================
# GitHub Container Registry (for docker-compose.yml)
# =============================================================================

# Your GitHub username (lowercase)
GITHUB_REPOSITORY_OWNER=tan-yong-sheng
